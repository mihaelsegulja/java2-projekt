<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hr.algebra.uno.controller.GameController">
   <children>
      <MenuBar layoutY="1.0" prefHeight="27.0" maxWidth="Infinity">
        <menus>
          <Menu mnemonicParsing="false" text="Game">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#startNewGame" text="New" />
              <MenuItem mnemonicParsing="false" onAction="#loadGame" text="Load" />
              <MenuItem mnemonicParsing="false" onAction="#saveGame" text="Save" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Docs">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#generateDocumentation" text="Generate" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
      <VBox alignment="CENTER" layoutX="-1.0" layoutY="28.0" prefHeight="573.0" prefWidth="700.0">
         <children>
             <ScrollPane fitToHeight="true" fitToWidth="true" prefHeight="150.0" prefWidth="700.0" vbarPolicy="NEVER" VBox.vgrow="ALWAYS">
                 <HBox fx:id="hbOpponentHand" alignment="CENTER_RIGHT" spacing="5">
                     <padding>
                         <Insets bottom="15" top="10" />
                     </padding>
                 </HBox>
             </ScrollPane>

             <HBox fx:id="hbDeck" alignment="CENTER" VBox.vgrow="NEVER" spacing="15" prefHeight="120.0" prefWidth="700.0">
               <children>
                  <StackPane fx:id="spDrawPile" prefHeight="120.0" prefWidth="80.0">
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin></StackPane>
                  <StackPane fx:id="spDiscardPile" prefHeight="120.0" prefWidth="80.0">
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin></StackPane>
                  <Label fx:id="lbStatus" prefHeight="50.0" maxWidth="Infinity" HBox.hgrow="ALWAYS" alignment="CENTER" text=" ">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font></Label>
                  <Button fx:id="btnUno" alignment="CENTER" mnemonicParsing="false" onAction="#handleUnoClick" text="UNO!" textAlignment="CENTER" />
               </children>
               <VBox.margin>
                  <Insets bottom="10.0" top="10.0" />
               </VBox.margin>
            </HBox>
             <ScrollPane fitToHeight="true" fitToWidth="true" prefHeight="150.0" prefWidth="700.0" vbarPolicy="NEVER" VBox.vgrow="ALWAYS">
                 <HBox fx:id="hbPlayerHand" alignment="CENTER_LEFT" spacing="5">
                     <padding>
                         <Insets bottom="15" top="10" />
                     </padding>
                 </HBox>
             </ScrollPane>
            <VBox prefHeight="128.0" prefWidth="700.0">
               <children>
                  <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="5">
                     <children>
                        <TextField fx:id="tfChat" HBox.hgrow="ALWAYS" onKeyPressed="#handleKeyPress">
                           <padding>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </padding>
                        </TextField>
                        <Button fx:id="btnChat" alignment="CENTER" mnemonicParsing="false" onAction="#sendChatMessage" text="SEND" />
                     </children>
                  </HBox>
                  <TextArea fx:id="taChat" editable="false" VBox.vgrow="ALWAYS" prefHeight="200.0" prefWidth="200.0" />
               </children>
            </VBox>
         </children>
      </VBox>
   </children>
</VBox>
